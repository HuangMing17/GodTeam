﻿<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - News Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <div class="layout-container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <div class="logo text-white">News Portal</div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="nav-links navbar-nav me-auto">
                        <li class="nav-item">
                            <a href="/" class="nav-link @(ViewBag.CurrentPage == "Home" ? "active" : "")">
                                <i class="bi bi-house"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/latest" class="nav-link @(ViewBag.CurrentPage == "Latest" ? "active" : "")">
                                <i class="bi bi-newspaper"></i> Tin tức mới nhất
                            </a>
                        </li>
                        @await Component.InvokeAsync("CategoryMenu")
                        <li class="nav-item">
                            <a asp-controller="Posts" asp-action="Index"
                                class="nav-link @(ViewBag.CurrentPage == "Posts" ? "active" : "")">
                                <i class="bi bi-pencil-square"></i> Quản lý bài viết
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="mt-5 py-4 bg-dark text-light">
            <div class="container">
                <div class="row footer-content">
                    <div class="col-md-4 footer-section">
                        <h3><i class="bi bi-info-circle"></i> Về chúng tôi</h3>
                        <p>News Portal - Kênh tin tức hàng đầu Việt Nam</p>
                    </div>
                    <div class="col-md-4 footer-section">
                        <h3><i class="bi bi-envelope"></i> Liên hệ</h3>
                        <p><i class="bi bi-envelope-fill"></i> Email: kayhoang1704@gmail.com</p>
                        <p><i class="bi bi-telephone-fill"></i> Điện thoại: 0326336115</p>
                    </div>
                    <div class="col-md-4 footer-section">
                        <h3><i class="bi bi-people"></i> Theo dõi</h3>
                        <div class="social-links">
                            <a href="#" class="me-3"><i class="bi bi-facebook"></i> Facebook</a>
                            <a href="#" class="me-3"><i class="bi bi-twitter"></i> Twitter</a>
                            <a href="#"><i class="bi bi-instagram"></i> Instagram</a>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom text-center mt-4">
                    <p class="mb-0">&copy; 2025 News Portal. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
