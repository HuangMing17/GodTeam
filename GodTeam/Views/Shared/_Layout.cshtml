﻿﻿﻿<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - News Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<body>
    <div class="layout-container">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <div class="logo">News Portal</div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="nav-links navbar-nav">
                        <a href="/" class="nav-link @(ViewBag.CurrentPage == "Home" ? "active" : "")">Trang chủ</a>
                        <a href="/latest" class="nav-link @(ViewBag.CurrentPage == "Latest" ? "active" : "")">Tin tức
                            mới nhất</a>
                        <a href="/categories"
                            class="nav-link @(ViewBag.CurrentPage == "Categories" ? "active" : "")">Thể loại</a>
                        <a asp-controller="Posts" asp-action="Index"
                            class="nav-link @(ViewBag.CurrentPage == "Posts" ? "active" : "")">Quản lý bài viết</a>
                    </div>
                </div>
            </div>
        </nav>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="mt-5 py-4">
            <div class="container">
                <div class="row footer-content">
                    <div class="col-md-4 footer-section">
                        <h3>Về chúng tôi</h3>
                        <p>News Portal - Kênh tin tức hàng đầu Việt Nam</p>
                    </div>
                    <div class="col-md-4 footer-section">
                        <h3>Liên hệ</h3>
                        <p>Email:kayhoang1704@gmail.com</p>
                        <p>Điện thoại: 0326336115</p>
                    </div>
                    <div class="col-md-4 footer-section">
                        <h3>Theo dõi</h3>
                        <div class="social-links">
                            <a href="#" class="me-3">Facebook</a>
                            <a href="#" class="me-3">Twitter</a>
                            <a href="#">Instagram</a>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom text-center mt-4">
                    <p class="mb-0">&copy; 2025 News Portal. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
